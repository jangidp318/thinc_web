{
  "name": "thinc-website-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit -p tsconfig.base.json",
    "prepare": "husky",
    "clean": "pnpm run clean:all",
    "clean:all": "rm -rf node_modules frontend/node_modules backend/node_modules */dist */.turbo .turbo .next .eslintcache",
    "rebuild": "pnpm run clean && pnpm install && pnpm build:all",
    "build:all": "pnpm -r run build",
    "build": "pnpm -r run build"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm exec eslint --fix"
    ],
    "*.{json,css,md,html}": [
      "pnpm exec prettier --write"
    ],
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/.next/**"
    ]
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "pnpm": ">=7",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  }
}
